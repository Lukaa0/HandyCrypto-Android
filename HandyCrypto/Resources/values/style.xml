<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowBackground">@color/backgroundLight</item>
    <item name="android:windowContentTransitions">true</item>
    <item name="windowActionBar">false</item>
    
    <item name="cardBackgroundColor">@color/cardview_light_background</item>

  </style>
  

  <style name="WindowAnimationTransition">
    <item name="android:windowEnterAnimation">@anim/slide_in_top</item>
    <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
</style>
 
<style name="full_screen_dialog">
    <item name="android:windowFrame">@null</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
</style>
  
  <style name="cardViewStyle" parent="Theme.AppCompat.Light">
    <item name="cardCornerRadius"> 10dp </item>
    <item name="cardElevation"> 5dp </item>
  </style>
  <style name="SplashBase" parent="AppTheme">
    <item name="android:windowNoTitle">true</item>
  </style>

  <style name="SplashTheme" parent="SplashBase">
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowBackground">@drawable/splash_image</item>
    <item name="android:windowFullscreen">true</item>
    <item name="android:windowActionBar">false</item>
  </style>

  
  <color name ="primary">#3F51B5</color>
  <color name ="colorPrimaryDark">#303F9F</color>
  <color name ="backgroundLight">#F8F8FF</color>

  <color name ="colorAccent">#03A9F4</color>
  <color name ="colorPrimaryLight">#C5CAE9</color>
  <color name ="colorPrimaryText">#212121</color>
  <color name ="colorPrimaryIcons">#FFFFFF</color>
  <color name ="primaryNight">#212121</color>
  <color name ="colorPrimaryDarkNight">#000000</color>
  <color name ="backgroundNight">#000000</color>
  <color name ="cardBackgroundColor">#ffffff</color>
    <color name ="cardBackgroundColorNight">#000000</color>
<color name="colorControlActivated">#148E13</color>

  <color name ="colorAccentNight">#000000</color>
  <color name ="colorPrimaryLightNight">#484848</color>
  <color name ="colorPrimaryTextNight">#ffffff</color>
  <color name ="colorPrimaryIconsNight">#FFFFFF</color>

</resources>